@model KurumsalWebProjesi.Models.Model.Blog

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="form">
    <form class="form-validate form-horizontal" id="feedback_form" method="post"  enctype="multipart/form-data">

        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Başlık <span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" id="Baslik" value="@Model.Baslik" name="Baslik" minlength="5" type="text" required />
            </div>
        </div>

        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">Kategori <span class="required">*</span></label>
            <div class="col-lg-10">
                @Html.DropDownList("KategoriId", null, new { @class = "form-control" })

            </div>
        </div>

        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">İçerik <span class="required">*</span></label>
            <div class="col-lg-10">
                <textarea name="Icerik" class="ckeditor">@Model.Icerik</textarea>

            </div>
        </div>

        <div class="form-group ">
            <label for="curl" class="control-label col-lg-2">Eski Resim</label>
            <div class="col-lg-10">
                <img src="@Model.ResimUrl" height="100" width="200" />
            </div>
        </div>

        <div class="form-group ">
            <label for="curl" class="control-label col-lg-2">Resim</label>
            <div class="col-lg-10">
                <input  class="form-control " accept=".jpg,.png,.jpeg" type="file" name="ResimUrl" />
            </div>
        </div>


        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-success" type="submit">Kaydet</button>
                <a href="/Blog/"> <input type="button" class="btn btn-danger" value="İptal" /> </a>
            </div>
        </div>
    </form>
</div>

