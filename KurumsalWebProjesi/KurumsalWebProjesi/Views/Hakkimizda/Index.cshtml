@model IEnumerable<KurumsalWebProjesi.Models.Model.Hakkimizda>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Aciklama)
        </th>
        <th>
            İşlemler
        </th>
       
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.Raw(item.Aciklama)
        </td>
        <td>
            <a href="/Hakkimizda/Edit/@item.HakkimizdaId"> <input type="button" class="btn btn-success" value="Güncelle" /> </a>           
        </td>
    </tr>
}

</table>
