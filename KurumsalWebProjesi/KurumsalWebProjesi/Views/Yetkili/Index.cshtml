@model IEnumerable<KurumsalWebProjesi.Models.Model.Admin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<p>
    <a href="/Yetkili/Create/">   <input type="button" class="btn btn-success" value="Ekle" />  </a>
</p>

<h2 class="text-center alert-danger">@ViewBag.hata</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AdminEposta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sifre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Yetki)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AdminEposta)
            </td>
            <td>
                @item.Sifre 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Yetki)
            </td>
            <td>
                <a href="/Yetkili/Edit/@item.AdminId"> <input type="button" class="btn btn-primary" value="Güncelle" /> </a>

                <a href="/Yetkili/Delete/@item.AdminId"> <input type="button" class="btn btn-danger" value="Sil" /> </a>
            </td>
        </tr>
    }

</table>
