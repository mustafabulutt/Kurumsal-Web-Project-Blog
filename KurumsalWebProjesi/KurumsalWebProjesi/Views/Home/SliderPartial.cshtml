@model ICollection<KurumsalWebProjesi.Models.Model.Slider>
@{

    Layout = null;
}

@foreach (var item in Model)
{
    <aside id="fh5co-hero" class="js-fullheight">
        <div class="flexslider js-fullheight">
            <ul class="slides">
                <li style="background-image: url(@item.ResimUrl);">
                    <div class="overlay-gradient"></div>
                    <div class="container">
                        <div class="col-md-10 col-md-offset-1 text-center js-fullheight slider-text">
                            <div class="slider-text-inner desc">
                                <h2 class="heading-section">@item.Baslik</h2>
                                <p class="fh5co-lead">@item.Acıklama </p>
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </aside>
}