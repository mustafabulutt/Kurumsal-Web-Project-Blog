@model ICollection<KurumsalWebProjesi.Models.Model.Iletisim>


<div id="fh5co-contact">
    <div class="container">
        <div class="row">
            <div class=" alert-success text-center ">@ViewBag.uyari</div>
            <div class="col-md-5 col-md-push-1 animate-box">
                <div class="fh5co-contact-info">
                    <h3>İLETİŞİM</h3>
                    <ul>
                        @foreach(var item in Model)
                        {
                            <li class="address">@item.Adres</li>
                            <li class="phone"><a href="tel://@item.Telefon"> @item.Telefon</a></li>
                            <li class="icon-facebook"><a href="@item.Facebook">Facebook</a></li>
                            <li class="icon-twitter"><a href="@item.Twitter">Twitter</a></li>
                        }
                    </ul>
                </div>



            </div>
            <div class="col-md-6 animate-box">

                <h3>Bize Yazın</h3>
                <form action="/Home/Iletisim/" method="post">
                    <div class="row form-group">
                        <div class="col-md-6">
                            <!-- <label for="fname">First Name</label> -->
                            <input type="text" name="ad" class="form-control" placeholder="isim" required>
                        </div>
                        <div class="col-md-6">
                            <!-- <label for="lname">Last Name</label> -->
                            <input type="text" name="soyad" class="form-control" placeholder="soyisim" required>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <!-- <label for="email">Email</label> -->
                            <input type="email" name="email" class="form-control" placeholder="mail adresiniz" required>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <!-- <label for="subject">Subject</label> -->
                            <input type="text" name="konu" class="form-control" placeholder="mesajınızın konusu ?" required>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <!-- <label for="message">Message</label> -->
                            <textarea required name="message" id="mesaj" cols="30" rows="10" class="form-control" placeholder="Mesajınız ?"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Gönder" class="btn btn-primary">
                    </div>

                </form>
            </div>
        </div>

    </div>
</div>
