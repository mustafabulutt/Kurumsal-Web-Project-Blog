@model ICollection<KurumsalWebProjesi.Models.Model.Blog>
    @{ 
        Layout = null;
    }

    <div id="fh5co-blog" class="fh5co-bg-section">
        <div class="container">
            <div class="row animate-box">
                <div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
                    <h2>Son Eklenen Blog Yazıları</h2>
                </div>
            </div>
            @{
                var sonblogpost = (from x in Model
                                   select new
                                   {
                                       Baslik = x.Baslik,        /*Ekranda 3 kayıt göstermesi için bu sorguyu oluşturdum*/
                                       ResimUrl=x.ResimUrl,
                                       BlogId=x.BlogId,

                                   }).Take(3);
            }

            <div class="row">
                @foreach (var item in sonblogpost)
                {
                    <div class="col-lg-4 col-md-4 ">
                        <div class="fh5co-blog animate-box">
                            <a href="#"><img class="img-responsive"  src="@item.ResimUrl" alt=""></a>
                            <div class="blog-text">

                                <h3><a href="#">@item.Baslik</a></h3>
                                
                                <a href="/Home/BlogDetay/@item.BlogId" class="btn btn-primary">Post'u Oku</a>
                            </div>
                        </div>
                    </div>
                }
            </div>




        </div>
    </div>