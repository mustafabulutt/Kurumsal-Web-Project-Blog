}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Creative - Bootstrap 3 Responsive Admin Template">
    <title>@ViewBag.Title - Admin Panel</title>
    <meta name="author" content="GeeksLabs">
    <meta name="keyword" content="Creative, Dashboard, Admin, Template, Theme, Bootstrap, Responsive, Retina, Minimal">
    <link rel="shortcut icon" href="img/favicon.png">

    <!--- <link href='' rel='stylesheet' type='text/css'> -->



    <!-- Bootstrap CSS -->
    <link href="/Content/adminfolder/css/bootstrap.min.css" rel="stylesheet">
    <!-- bootstrap theme -->
    <link href="/Content/adminfolder/css/bootstrap-theme.css" rel="stylesheet">
    <!--external css-->
    <!-- font icon -->
    <link href="/Content/adminfolder/css/elegant-icons-style.css" rel="stylesheet" />
    <link href="/Content/adminfolder/css/font-awesome.min.css" rel="stylesheet" />
    <!-- full calendar css-->
    <link href="/Content/adminfolder/assets/fullcalendar/fullcalendar/bootstrap-fullcalendar.css" rel="stylesheet" />
    <link href="/Content/adminfolder/assets/fullcalendar/fullcalendar/fullcalendar.css" rel="stylesheet" />
    <!-- easy pie chart-->
    <link href="/Content/adminfolder/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.css" rel="stylesheet" type="text/css" media="screen" />
    <!-- owl carousel -->
    <link rel="stylesheet" href="/Content/adminfolder/css/owl.carousel.css" type="text/css">
    <link href="/Content/adminfolder/css/jquery-jvectormap-1.2.2.css" rel="stylesheet">
    <!-- Custom styles -->
    <link rel="stylesheet" href="/Content/adminfolder/css/fullcalendar.css">
    <link href="/Content/adminfolder/css/widgets.css" rel="stylesheet">
    <link href="/Content/adminfolder/css/style.css" rel="stylesheet">
    <link href="/Content/adminfolder/css/style-responsive.css" rel="stylesheet" />
    <link href="/Content/adminfolder/css/xcharts.min.css" rel=" stylesheet">
    <link href="/Content/adminfolder/css/jquery-ui-1.10.4.min.css" rel="stylesheet">


    <!-- =======================================================
      Theme Name: NiceAdmin
      Theme URL: https://bootstrapmade.com/nice-admin-bootstrap-admin-html-template/
      Author: BootstrapMade
      Author URL: https://bootstrapmade.com
    ======================================================= -->
    <script src="~/Content/ckeditor/ckeditor.js"></script>
    <link href="~/Content/ckeditor/contents.css" rel="stylesheet" />
</head>

<body>
    <!-- container section start -->
    <section id="container" class="">


        <header class="header dark-bg">
            <div class="toggle-nav">
                <div class="icon-reorder tooltips" data-original-title="Küçült" data-placement="bottom"><i class="icon_menu"></i></div>
            </div>

            <!--logo start-->
            <a href="/Admin/Index/" class="logo">Bulut <span class="lite">Admin</span></a>
            <!--logo end-->



            <div class="top-nav notification-row">
                <!-- notificatoin dropdown start-->
                <ul class="nav pull-right top-menu">

                  
                    <!-- alert notification start-->
                    

                    @{ 
                        Html.RenderAction("YorumBildirimPartial","Yorum");
                    }


                    <!-- alert notification end-->
                    <!-- user login dropdown start-->
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <span class="profile-ava">
                                <img alt="" src="/Content/adminfolder/img/avatar1_small.jpg">
                            </span>
                            <span class="username">@Session["eposta"]</span>
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu extended logout">
                            <div class="log-arrow-up"></div>
                            <li>
                                <a href="/Yetkili/Edit/@Session["adminid"]">Bilgileri Düzenle</a>
                            </li>
                           
                            <li>
                                <a href="/Admin/Logout"><i class="icon_key_alt"></i>  Çıkış Yap</a>
                            </li>
                           
                        </ul>
                    </li>
                    <!-- user login dropdown end -->
                </ul>
                <!-- notificatoin dropdown end-->
            </div>
        </header>
        <!--header end-->
        <!--sidebar start-->
        <aside>
            <div id="sidebar" class="nav-collapse ">
                <!-- sidebar menu start-->
                <ul class="sidebar-menu">
                    <li class="">
                        <a class="" href="/Admin/Index">
                            <i class="icon_house_alt"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>


                    <li>
                        <a class="" href="/Kimlik/">
                            <i class="icon_genius"></i>
                            <span>Site Kimlik</span>
                        </a>
                    </li>



                    <li>
                        <a class="" href="/Hakkimizda/">
                            <i class="icon_genius"></i>
                            <span>Hakkimizda</span>
                        </a>
                    </li>

                    <li>
                        <a class="" href="/Iletisim/">
                            <i class="icon_genius"></i>
                            <span>İletişim</span>
                        </a>
                    </li>

                    <li>
                        <a class="" href="/Hizmets/">
                            <i class="icon_genius"></i>
                            <span>Hizmetler</span>
                        </a>
                    </li>


                    <li class="sub-menu">
                        <a href="javascript:;" class="">
                            <i class="icon_document_alt"></i>
                            <span>Blog Kayıtları</span>
                            <span class="menu-arrow arrow_carrot-right"></span>
                        </a>
                        <ul class="sub">
                            <li><a class="" href="/Kategori/">Kategoriler</a></li>
                            <li><a class="" href="/Blog/">Blog Kayıtları </a></li>
                        </ul>
                    </li>

                    <li>
                        <a class="" href="/Yorum/">
                            <i class="icon_genius"></i>
                            <span>Blog Yorumları</span>
                        </a>
                    </li>

                    <li>
                        <a class="" href="/Slider/">
                            <i class="icon_genius"></i>
                            <span>Giriş Görseli</span>
                        </a>
                    </li>

                    <li>
                        <a class="" href="/Yetkili/">
                            <i class="icon_genius"></i>
                            <span>Yetkili Ekle</span>
                        </a>
                    </li>









                </ul>
                <!-- sidebar menu end-->
            </div>
        </aside>
        <!--sidebar end-->
        <!--main content start-->


        <section id="main-content">
            <section class="wrapper">
                <div class="row">
                    <div class="col-lg-12">

                        @RenderBody()

                    </div>
                </div>
            </section>
        </section>



        <!--main content end-->
    </section>
    <!-- container section start -->
    <!-- javascripts -->
    <script src="/Content/adminfolder/js/jquery.js"></script>
    <script src="/Content/adminfolder/js/jquery-ui-1.10.4.min.js"></script>
    <script src="/Content/adminfolder/js/jquery-1.8.3.min.js"></script>
    <script type="text/javascript" src="/Content/adminfolder/js/jquery-ui-1.9.2.custom.min.js"></script>


    <!-- bootstrap -->
    <script src="/Content/adminfolder/js/bootstrap.min.js"></script>
    <!-- nice scroll -->
    <script src="/Content/adminfolder/js/jquery.scrollTo.min.js"></script>
    <script src="/Content/adminfolder/js/jquery.nicescroll.js" type="text/javascript"></script>
    <!-- charts scripts -->
    <script src="/Content/adminfolder/assets/jquery-knob/js/jquery.knob.js"></script>
    <script src="/Content/adminfolder/js/jquery.sparkline.js" type="text/javascript"></script>
    <script src="/Content/adminfolder/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.js"></script>
    <script src="/Content/adminfolder/js/owl.carousel.js"></script>
    <!-- jQuery full calendar -->

    <script src="/Content/adminfolder/js/fullcalendar.min.js"></script>
    <!-- Full Google Calendar - Calendar -->
    <script src="/Content/adminfolder/assets/fullcalendar/fullcalendar/fullcalendar.js"></script>
    <!--script for this page only-->
    <script src="/Content/adminfolder/js/calendar-custom.js"></script>
    <script src="/Content/adminfolder/js/jquery.rateit.min.js"></script>
    <!-- custom select -->
    <script src="/Content/adminfolder/js/jquery.customSelect.min.js"></script>
    <script src="/Content/adminfolder/assets/chart-master/Chart.js"></script>

    <!--custome script for all page-->
    <script src="/Content/adminfolder/js/scripts.js"></script>
    <!-- custom script for this page-->
    <script src="/Content/adminfolder/js/sparkline-chart.js"></script>
    <script src="/Content/adminfolder/js/easy-pie-chart.js"></script>
    <script src="/Content/adminfolder/js/jquery-jvectormap-1.2.2.min.js"></script>
    <script src="/Content/adminfolder/js/jquery-jvectormap-world-mill-en.js"></script>
    <script src="/Content/adminfolder/js/xcharts.min.js"></script>
    <script src="/Content/adminfolder/js/jquery.autosize.min.js"></script>
    <script src="/Content/adminfolder/js/jquery.placeholder.min.js"></script>
    <script src="/Content/adminfolder/js/gdp-data.js"></script>
    <script src="/Content/adminfolder/js/morris.min.js"></script>
    <script src="/Content/adminfolder/js/sparklines.js"></script>
    <script src="/Content/adminfolder/js/charts.js"></script>
    <script src="/Content/adminfolder/js/jquery.slimscroll.min.js"></script>

    <script>
        //knob
        $(function () {
            $(".knob").knob({
                'draw': function () {
                    $(this.i).val(this.cv + '%')
                }
            })
        });

        //carousel
        $(document).ready(function () {
            $("#owl-slider").owlCarousel({
                navigation: true,
                slideSpeed: 300,
                paginationSpeed: 400,
                singleItem: true

            });
        });

        //custom select box

        $(function () {
            $('select.styled').customSelect();
        });

        /* ---------- Map ---------- */
        $(function () {
            $('#map').vectorMap({
                map: 'world_mill_en',
                series: {
                    regions: [{
                        values: gdpData,
                        scale: ['#000', '#000'],
                        normalizeFunction: 'polynomial'
                    }]
                },
                backgroundColor: '#eef3f7',
                onLabelShow: function (e, el, code) {
                    el.html(el.html() + ' (GDP - ' + gdpData[code] + ')');
                }
            });
        });
    </script>

</body>
</html>